{% macro render_pagination(pagination, endpoint, cat_slug=None) %}
  <ul class='relative z-0 hidden sm:inline-flex rounded-md shadow-sm -space-x-px'>
    <li class="{{ pagination.has_prev|yesno('', 'disabled') }}">
      <a href="{{ url_for(endpoint) }}" class='relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50'>
        <span class='sr-only'>Previous</span>
        <svg class='h-5 w-5' x-description='Heroicon name: solid/chevron-left' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true'>
          <path fill-rule='evenodd' d='M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z' clip-rule='evenodd'></path>
        </svg>
      </a>
    </li>
    {%- for page in pagination.iter_pages() %}
      {% if page %}
        <li class=''>
          {% with url = url_for(endpoint)|add_urlparam('page', page) if not cat_slug else url_for(endpoint, catslug=cat_slug)|add_urlparam('page', page) %}
            <a href="{{ url }}"
              class="relative inline-flex items-center px-4 py-2 border text-sm font-medium {{ pagination.page|compare_flip(page, 'z-10 bg-indigo-50 border-indigo-500 text-indigo-600', 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50') }}">{{ page }}</a>
          {% endwith %}
        </li>
      {% else %}
        <li>
          <span class='relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700'>â€¦</span>
        </li>
      {% endif %}
    {%- endfor %}
    <li class="{{ pagination.has_next|yesno('', 'disabled') }}">
      <a href="{{ url_for(endpoint)|add_urlparam('page', pagination.pages) }}"
         class='relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50'>
        <span class='sr-only'>Next</span>
        <svg class='h-5 w-5' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true'>
          <path fill-rule='evenodd' d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z' clip-rule='evenodd' />
        </svg>
      </a>
    </li>
  </ul>
{% endmacro %}
