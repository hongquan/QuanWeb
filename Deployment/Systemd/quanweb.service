[Unit]
Description=QuanWeb
After=postgresql.service

[Service]
User=quan
Group=quan

Type=simple
WorkingDirectory=/home/quan/QuanWeb/quanweb
RuntimeDirectory=quanweb
ExecStart=/home/quan/QuanWeb/venv/bin/gunicorn quanweb:app -b unix:/run/quanweb/web.sock
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
