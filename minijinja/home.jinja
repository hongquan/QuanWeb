{% extends 'base.jinja' %}

{% block title %}Qu√¢n web{% endblock %}

{% block inner_content %}
  {# Featured Categories Blocks #}
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6" x-data="{ hoveredBlock: null }">
    {% for block in featured_categories %}
      {% set cat = block.category %}
      {% set header_color = cat.header_color|default('') %}
      {% set summary = cat.summary_vi if lang == 'vi' and cat.summary_vi else cat.summary_en|default('') %}
      
      <section class="featured-category-block rounded-xl overflow-hidden shadow-lg transition-all hover:shadow-xl border border-hover bg-card"
               :class="{ 'active': hoveredBlock === {{ loop.index }} }"
               @mouseenter="hoveredBlock = {{ loop.index }}"
               @mouseleave="hoveredBlock = null">
        {# Block Header with accent color or default accent #}
        {% if header_color %}
        <div class="category-header px-6 py-4 border-b transition-colors border-theme" 
             style="background: linear-gradient(135deg, {{ header_color }}20 0%, {{ header_color }}10 100%); 
                    border-left: 4px solid {{ header_color }};">
          <h2 class="text-xl md:text-2xl font-semibold text-primary">
            <a href="/category/{{ cat.slug }}/" class="hover:opacity-80 transition-opacity">
              {{ cat.title_vi if lang == 'vi' and cat.title_vi else cat.title }}
            </a>
          </h2>
        </div>
        {% else %}
        <div class="category-header px-6 py-4 border-b transition-colors border-theme" 
             style="background: linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(59,130,246,0.03) 100%); 
                    border-left: 4px solid var(--accent);">
          <h2 class="text-xl md:text-2xl font-semibold text-primary">
            <a href="/category/{{ cat.slug }}/" class="hover:opacity-80 transition-opacity">
              {{ cat.title_vi if lang == 'vi' and cat.title_vi else cat.title }}
            </a>
          </h2>
        </div>
        {% endif %}
        
        {# Block Content #}
        <div class="category-content p-6">
          {# Summary text #}
          {% if summary %}
            <p class="category-summary mb-5 leading-relaxed text-sm md:text-base text-secondary">
              {{ summary }}
            </p>
          {% endif %}
          
          {# Latest Posts Links #}
          {% if block.latest_posts %}
            <div class="latest-posts">
              <h3 class="text-xs font-medium uppercase tracking-wider mb-3 text-muted">
                {{ _f('latest-posts')|default('Latest Posts') }}
              </h3>
              <ul class="space-y-3">
                {% for post in block.latest_posts %}
                  {% set post_url = post|post_detail_url %}
                  <li class="flex items-start group" x-data="featured_post_item" data-created-at="{{ post.created_at }}">
                    <svg xmlns="http://www.w3.org/2000/svg" 
                         class="h-5 w-5 mt-0.5 mr-3 flex-shrink-0 link-hover-accent" 
                         :class="{ 'active': hovered }"
                         fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <div class="flex flex-col">
                      <a href="{{ post_url }}" 
                         class="font-medium link-hover"
                         @mouseenter="hovered = true"
                         @mouseleave="hovered = false">
                        {{ post.title }}
                      </a>
                      <time class="text-xs text-muted" x-text="createdAtDisplay"></time>
                    </div>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          
          {# View All Link #}
          <div class="mt-5 pt-4 border-t transition-colors border-theme">
            <a href="/category/{{ cat.slug }}/" 
               class="inline-flex items-center text-sm font-medium transition-colors group link-hover-accent">
              {{ _f('view-all-posts')|default('View all posts') }}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </section>
    {% endfor %}
  </div>

  {# Latest Posts Section #}
  {% if latest_posts %}
    <section class="latest-posts-section mt-12 pt-8 border-t transition-colors border-theme">
      <h2 class="text-2xl md:text-3xl font-semibold mb-8 text-center text-primary">
        {{ _f('latest-posts')|default('Latest Posts') }}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for post in latest_posts %}
          {% set post_url = post|post_detail_url %}
          <article class="latest-post-card rounded-xl overflow-hidden shadow-lg transition-all hover:shadow-xl border border-hover bg-card group"
                   x-data="latest_post_card"
                   data-created-at="{{ post.created_at }}">
            {# Cover Image #}
            <a href="{{ post_url }}" class="block relative overflow-hidden aspect-video">
              {% if post.og_image %}
                <img src="{{ post.og_image }}" 
                     alt="{{ post.title }}" 
                     class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                     loading="lazy">
              {% else %}
                <div class="w-full h-full bg-gradient-to-br from-blue-400/20 to-purple-500/20 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-muted/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              {% endif %}
            </a>
            
            {# Card Content #}
            <div class="p-5">
              {# Title #}
              <h3 class="text-lg font-semibold mb-2 line-clamp-2">
                <a href="{{ post_url }}" class="text-primary hover:opacity-80 transition-opacity">
                  {{ post.title }}
                </a>
              </h3>
              
              {# Excerpt #}
              {% if post.excerpt %}
                <p class="text-sm text-secondary line-clamp-3 mb-4">
                  {{ post.excerpt|striptags }}
                </p>
              {% endif %}
              
              {# Date #}
              <div class="flex items-center text-xs text-muted">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <time x-text="createdAtDisplay"></time>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    </section>
  {% endif %}

  {# Link to All Posts #}
  <div class="mt-12 pt-8 border-t text-center transition-colors border-theme">
    <a href="/posts/" class="inline-flex items-center text-xl md:text-2xl font-semibold transition-colors group link-hover-accent">
      {{ _f('view-all-posts')|default('View all posts') }}
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-3 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
{% endblock inner_content %}
