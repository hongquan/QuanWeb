{% macro render_pagelink_item(item) %}
  {% set ELLIPSIS_CLASS = 'relative hidden xs:inline-flex items-center px-4 py-2 border text-sm font-medium' %}
  {% set ACTIVE_CLASS = 'z-10 text-white' %}
  {% set INACTIVE_CLASS = 'hidden xs:block hover:opacity-80 bg-hover-secondary link-hover-muted' %}
  <li>
  {% if item.is_ellipsis %}
    <span class='{{ ELLIPSIS_CLASS }} bg-card border-theme text-muted'>â€¦</span>
  {% else %}
    {% if item.is_current %}
    <a href='?page={{ item.page }}' class='relative inline-flex items-center px-4 py-2 border text-sm font-medium transition-colors {{ ACTIVE_CLASS }}'
       style="background-color: var(--accent); border-color: var(--accent);">{{ item.page }}</a>
    {% else %}
    <a href='?page={{ item.page }}' class='relative inline-flex items-center px-4 py-2 border text-sm font-medium transition-colors {{ INACTIVE_CLASS }} bg-card border-theme text-secondary'>{{ item.page }}</a>
    {% endif %}
  {% endif %}
  </li>
{% endmacro %}

{% macro render_pagination(items) %}
  {% if items %}
    {% set ARROW_CLASS = 'relative inline-flex items-center px-2 py-2 border text-sm font-medium transition-colors' %}
    {% set has_next = next_page_url|bool %}
    {% set has_prev = prev_page_url|bool %}
    <ul class='relative z-0 inline-flex rounded-md shadow-sm -space-x-px'>
      <li>
        {% if has_prev %}
        <a href="{{ prev_page_url }}" 
           class='{{ ARROW_CLASS }} rounded-l-md bg-hover-secondary link-hover-muted bg-card border-theme text-secondary'
           {{ 'disabled' if not has_prev }}>
        {% else %}
        <a href="#" 
           class='{{ ARROW_CLASS }} rounded-l-md bg-hover-secondary link-hover-muted bg-card border-theme text-muted'
           style="cursor: not-allowed;"
           disabled>
        {% endif %}
          <span class='sr-only'>Previous</span>
          <svg class='h-5 w-5' x-description='Heroicon name: solid/chevron-left' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true'>
            <path fill-rule='evenodd' d='M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z' clip-rule='evenodd'></path>
          </svg>
        </a>
      </li>
      {% for item in items %}
        {{ render_pagelink_item(item) }}
      {% endfor %}
      <li>
        {% if has_next %}
        <a href="{{ next_page_url }}" 
           class='{{ ARROW_CLASS }} rounded-r-md bg-hover-secondary link-hover-muted bg-card border-theme text-secondary'
           {{ 'disabled' if not has_next }}>
        {% else %}
        <a href="#" 
           class='{{ ARROW_CLASS }} rounded-r-md bg-hover-secondary link-hover-muted bg-card border-theme text-muted'
           style="cursor: not-allowed;"
           disabled>
        {% endif %}
          <span class='sr-only'>Next</span>
          <svg class='h-5 w-5' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true'>
            <path fill-rule='evenodd' d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z' clip-rule='evenodd' />
          </svg>
        </a>
      </li>
    </ul>
  {% endif %}
{% endmacro %}
