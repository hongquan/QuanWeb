{% extends 'base.jinja' %}

{% block title %}Books{% endblock %}

{% block inner_content %}
  <dl class='space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10'>
    {% for b in books -%}
      <div class='relative'>
        <dt>
          <a class='absolute flex items-center justify-center h-16 w-16 rounded-md bg-indigo-500 hover:bg-indigo-400 text-white' href='{{ b.download_url }}' target='_blank'>
            <svg xmlns='http://www.w3.org/2000/svg' class='h-16 w-16' fill='none' viewBox='0 0 24 24' stroke='currentColor'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253' />
            </svg>
          </a>
          <h3 class='ml-20 text-lg leading-6 font-medium text-gray-900 dark:text-gray-100'>{{ b }}</h3>
        </dt>
        <dd class='mt-2 ml-20 text-base text-gray-500'>
          <p>{{ b.author }}</p>
        </dd>
      </div>
    {%- endfor %}
  </dl>
{% endblock inner_content %}
